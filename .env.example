# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
WORKERS=4
MAX_UPLOAD_SIZE=10485760  # 10MB
MAX_TOTAL_SIZE=52428800  # 50MB total size for multiple images
MAX_IMAGES_PER_REQUEST=10  # Maximum number of images per request
REQUEST_TIMEOUT=300  # 5 minutes

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting (Global)
GLOBAL_RATE_LIMIT=20  # requests per minute per IP
BURST_RATE_LIMIT=5   # burst requests

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=200

# Gemini Configuration
GEMINI_MODEL=gemini-2.5-flash-lite
API_KEYS_FILE=config/api_keys.yaml
PROMPTS_FILE=config/prompts.yaml

# Rate Limiting
DEFAULT_RPM=60
DEFAULT_RPD=1440
DEFAULT_TPM=32000

# Logging
LOG_LEVEL=INFO
LOG_ROTATION=00:00  # Time-based rotation (daily at midnight)
LOG_RETENTION_DAYS=7

# Worker Pool Configuration
MIN_WORKERS=50
MAX_WORKERS=1000
WORKER_SCALE_CHECK_INTERVAL=10  # seconds
WORKER_IDLE_THRESHOLD=120  # seconds before worker considered idle

# Long Polling Configuration
POLLING_TIMEOUT=60  # seconds
POLLING_CHECK_INTERVAL=0.5  # seconds
TASK_RETENTION_TIME=300  # 5 minutes in seconds

# Redis Key Expiration Settings (in seconds)
REDIS_TASK_EXPIRE=300      # Task data storage (5 minutes)
REDIS_ERROR_EXPIRE=300       # Error information (5 minutes)
REDIS_PROCESSING_EXPIRE=180  # Processing timeout (3 minutes)
REDIS_RATE_LIMIT_EXPIRE=60   # Rate limiting window (1 minute)
REDIS_BURST_LIMIT_EXPIRE=10  # Burst rate limiting (10 seconds)
REDIS_FAILURE_COUNT_EXPIRE=300  # API key failure tracking (5 minutes)